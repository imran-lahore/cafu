<div class="jumbotron">
    <h1 class="display-3">Cafu IOT Devices</h1>

    <div class="progress">
        <div class="progress-bar" role="progressbar" style="width: 45%" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100"></div>
        <div class="progress-bar bg-success" role="progressbar" style="width: 30%" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
        <div class="progress-bar bg-info" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <p class="lead">This is a sample page to display sample devices featured content or information.</p>
    <ul class="list-group">
        <li class="list-group-item d-flex justify-content-between align-items-center border-success">
            <p class="text-success font-weight-bold ">Co2 Sensors</p>

            <span class="badge badge-primary badge-pill">2</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center border-info">
            <p class="text-info font-weight-bold"> Temperature and Humidy Sensors</p>
            <span class="badge badge-primary badge-pill">3</span>
        </li>
    </ul>
</div>

<div data-load-device-graphs></div>

<script type="text/template" id="device-card">
  <div id="\{{device.deviceId}}" class="col-lg-12 row-widget border-highlighted-green">
        \{{#if device.isCo2}}
        <div class="row title-row">
            <div class="col-sm-6">
                <i class="envco-icon fas fa-leaf fa-3x" aria-hidden="true"></i>
                <h3 class="data-title icon small-font">&nbsp;\{{ device.name }}</h3>
            </div>
            <div class="col-sm-6">
                <i class="envco-icon fa fa-cloud fa-3x"></i>
                <h3 class="data-title icon small-font">&nbsp;
                    <span>\{{ roundNumber device.data.co2EmissionLVL  }} <sup>PPM</sup> </span>
                </h3>
            </div>
        </div>
        \{{ else }}
        <div class="row title-row">
            <div class="col-sm-4">
                    <i class="envco-icon fas fa-temperature-low fa-3x"></i>
                    <h3 class="data-title icon small-font">&nbsp;
                        <span>\{{ device.name }} </span>
                    </h3>
            </div>
            <div class="col-sm-4">
                <i class="envco-icon fas fa-wind fa-3x"></i>
                <h2 class="data-title icon small-font">&nbsp;
                    <span>\{{ roundNumber device.data.humidity }}<sup>%</sup></span>
                </h2>
            </div>
            <div class="col-sm-4">
                <i class="envco-icon fa fa-thermometer-empty fa-3x"></i>
                <h3 class="data-title icon small-font">&nbsp;
                    <span class="icon-middle">&nbsp;\{{ roundNumber device.data.temperature}} <sup>&deg;C</sup></span>
                </h3>
            </div>
        </div>
        \{{/if}}
        <div class="row">
            <div class="col-sm-4">
                <div class="data-tag"><i class="fa fa-building-o" aria-hidden="true"></i>&nbsp;
                    Associated With
                </div>
                <h4 class="data-box">\{{ device.site }}</h4>
            </div>
            <div class="col-sm-4">
                <div class="data-tag"><i class="fa fa-microchip" aria-hidden="true"></i>&nbsp;
                    Device
                </div>
                <h4 class="data-box"> \{{ device.name }}</h4>
            </div>
            <div class="col-sm-4">
                <div class="data-tag"><i class="fa  fa-exclamation" aria-hidden="true"></i>&nbsp;
                    Device Type
                </div>
                <h4 class="data-box">\{{ device.type }}</h4>
            </div>

        </div>
    </div>
</script>
